<%- include("../include/head") %>
<link rel="stylesheet" href="/css/createPost.css" />
  </head>

  <body>
    
    <%- include("../include/navigation") %>
  
    <div class="container">
      <input type="hidden" id="citytoken" value="<%= citytoken %>">
      <form id="form" class="form" enctype="multipart/form-data" method="POST"
      <% if (typeof postData==="undefined") { %>
        action = "/create"
       <% } else { %>
       action="/edit/<%= postData.id %>" <% } %> >
       <input type="hidden" name="_csrf" value="<%= csrfToken %>">
       <h2> <% if (typeof postData !=="undefined") { %>Edit<% } else { %>Create <% } %>  a Classified Post</h2>
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" placeholder="Enter Title" 
          <% if (typeof postData !=="undefined") { %>
           value = "<%= postData.title %> "
          <% } %>
          />
          <small>Error message</small>
        </div>
        <div class="form-control">
          <label for="category">Category</label>
          <input type="text" id="category" 
          name="category" placeholder="Enter Category" <% if (typeof postData !=="undefined") { %>
            value = "<%= postData.category %> "
           <% } %> />
          <small>Error message</small>
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" id="price" 
          name="price" placeholder="Enter price" 
          <% if (typeof postData !=="undefined") { %>
            value = <%= postData.price %> 
           <% } %>
          />
          <small>Error message</small>
        </div>
      <div  <% if(error!==""){%>class="form-control error"  <% } else { %> class="form-control" <% } %>>
          <label for="description"> Description </label>
          <textarea name="description" id="description" placeholder="Few words about your post"  rows="5"><% if (typeof postData !=="undefined") { %><%= postData.description %><% }  %></textarea>
    
       <small> <% if(error!==""){%><%= error %><% } else {%>Error message<% } %></small>
          
        </div>
        <div class="form-control">
        <select name="country" id="country-select" class="">
          <option value="<% if (typeof postData !=="undefined") { %><%= postData.country %><% }  %>">
          <% if (typeof postData !=="undefined") { %><%= postData.country %><% } else {  %>Please Select Country <% } %> </option>
        </select>
        <small>Error message</small>
      </div>
        <div class="form-control">
        <select name="state" id="state-select" class="">
          <option value="<% if (typeof postData !=="undefined") { %><%= postData.state %><% }  %>">
          <% if (typeof postData !=="undefined") { %><%= postData.state %><% } else {  %>Please Select State <% } %> </option>
        </select>
          <small>Error message</small>
        
      </div>
        <div class="form-control">
        <select name="city" id="city-select" class="">
          <option value="<% if (typeof postData !=="undefined") { %><%= postData.city %><% }  %>">
          <% if (typeof postData !=="undefined") { %><%= postData.city %><% } else {  %>Please Select City <% } %> </option>
        </select>
          <small>Error message</small>
        
      </div>
        <div class="form-control">
          <label for="area">Area</label>
          <input type="area" id="area" 
          name="area" placeholder="Enter Area" <% if (typeof postData !=="undefined") { %>
            value = "<%= postData.area %> "
           <% } %> />
          <small>Error message</small>
        </div>
        
          <div class="form-control">
            <label for="imageUrl">Images</label>
            <input type="file" id="imageUrl" 
            name="imageUrl" multiple/>
            <small>Error message</small>
          </div>
        <button id="submit-btn">Submit</button>
      </form>
    </div>
    <script src="/js/createPostScript.js"></script>
    <%- include("../include/ending") %>