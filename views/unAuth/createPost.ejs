<%- include("../include/head") %>
<link rel="stylesheet" href="/css/createPost.css" />
  </head>

  <body>
    <header>
    <%- include("../include/navigation") %>
  </header>
    <div class="container">
      <form id="form" class="form" method="POST"
      <% if (typeof postData==="undefined") { %>
        action = "/create"
       <% } else { %>
       action="/edit/<%= postData.userId %> >" <% } %> >
        <h2>Create a Classified Post</h2>
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" placeholder="Enter Title" 
          <% if (typeof postData !=="undefined") { %>
           value = "<%= postData.title %> "
          <% } %>
          />
          <small>Error message</small>
        </div>
        <div class="form-control">
          <label for="category">Category</label>
          <input type="text" id="category" 
          name="category" placeholder="Enter Category" <% if (typeof postData !=="undefined") { %>
            value = "<%= postData.category %> "
           <% } %> />
          <small>Error message</small>
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" id="price" 
          name="price" placeholder="Enter price" 
          <% if (typeof postData !=="undefined") { %>
            value = <%= postData.price %> 
           <% } %>
          />
          <small>Error message</small>
        </div>
      <div  <% if(error!==""){%>class="form-control error"  <% } else { %> class="form-control" <% } %>>
          <label for="description"> Description </label>
          <textarea name="description" id="description" placeholder="Few words about your post"  rows="5"><% if (typeof postData !=="undefined") { %><%= postData.description %><% }  %></textarea>
    
       <small> <% if(error!==""){%><%= error %><% } else {%>Error message<% } %></small>
          
        </div>
        <div class="form-control">
          <label for="location">Location</label>
          <input type="location" id="location" 
          name="location" placeholder="Enter Location" <% if (typeof postData !=="undefined") { %>
            value = "<%= postData.location %> "
           <% } %> />
          <small>Error message</small>
        </div>
        
          <div class="form-control">
            <label for="imageUrl">ImageUrl</label>
            <input type="text" id="imageUrl" 
            name="imageUrl" placeholder="Enter imageUrl" <% if (typeof postData !=="undefined") { %>
              value = "<%= postData.imageUrl %> "
             <% } %> />
            <small>Error message</small>
          </div>
        <button id="submit-btn">Submit</button>
      </form>
    </div>
    <script src="/js/createPostScript.js"></script>
    <%- include("../include/ending") %>